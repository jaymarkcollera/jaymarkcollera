class Car:
    def __init__(self, brand, model, year):
        self.brand = brand
        self.model = model
        self.year = year

    def display_info(self):
        print(f"Brand: {self.brand}")
        print(f"Model: {self.model}")
        print(f"Year: {self.year}")

# Create two car objects and display their details
car1 = Car("ford", "mustank", 2021)
car2 = Car("Honda", "Civic", 2020)

print("Car 1 Details:")
car1.display_info()

print("\nCar 2 Details:")
car2.display_info()
