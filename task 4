class Book:
    def __init__(self, title, author, year_published):
        self.title = title
        self.author = author
        self.year_published = year_published

    def describe(self):
        print(f"Title: {self.title}")
        print(f"Author: {self.author}")
        print(f"Year Published: {self.year_published}")

# Create three book objects and display their details
book1 = Book("The Shadow Thief", "Alexandra Adornetto", 2007)
book2 = Book("1984", "George Orwell", 1949)
book3 = Book("The Alchemist", "Paulo Coelho", 1988)

book1.describe()
print()
book2.describe()
print()
book3.describe()
```